                                         Opacity="0"
                                         IsHitTestVisible="false" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  CheckBox  -->
    <Style TargetType="controls:CheckBox">
        <Setter Property="Background"
                Value="#FF448DCA" />
        <Setter Property="Foreground"
                Value="#FF000000" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="VerticalContentAlignment"
                Value="Top" />
        <Setter Property="Padding"
                Value="4,1,0,0" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="#FF718597" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:CheckBox">
                    <controls:Grid>
                        <controls:Grid.ColumnDefinitions>
                            <controls:ColumnDefinition Width="16" />
                            <controls:ColumnDefinition Width="*" />
                        </controls:Grid.ColumnDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="BackgroundOverlay"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To="1" />
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="BoxMiddleBackground"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To="1" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#7FFFFFFF" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#CCFFFFFF" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#F2FFFFFF" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="BackgroundOverlay"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To="1" />
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="BoxMiddleBackground"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To="1" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#6BFFFFFF" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#C6FFFFFF" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#EAFFFFFF" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                  Duration="0"
                                                                  To="#F4FFFFFF" />
                                        <animation:ColorAnimation animation:Storyboard.TargetName="BoxMiddle"
                                                                  animation:Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                  Duration="0"
                                                                  To="#FF6DBDD1" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="contentPresenter"
                                                                   animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                   Duration="0"
                                                                   To=".55" />
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="DisabledVisualElement"
                                                                   animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                   Duration="0"
                                                                   To="0.55" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CheckStates">
                                <VisualState x:Name="Checked">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="CheckIcon"
                                                                   animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                   Duration="0"
                                                                   To="1" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unchecked" />
                                <VisualState x:Name="Indeterminate">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="IndeterminateIcon"
                                                                   animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                   Duration="0"
                                                                   To="1" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="ContentFocusVisualElement"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   Duration="0"
                                                                   To="1" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                                <VisualState x:Name="Valid" />
                                <VisualState x:Name="InvalidUnfocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationErrorElement"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="InvalidFocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationErrorElement"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:BooleanAnimationUsingKeyFrames animation:Storyboard.TargetName="validationTooltip"
                                                                                  animation:Storyboard.TargetProperty="IsOpen">
                                            <animation:DiscreteBooleanKeyFrame KeyTime="0"
                                                                               Value="True" />
                                        </animation:BooleanAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:Grid HorizontalAlignment="Left"
                                       VerticalAlignment="Top">
                            <controls:Border x:Name="Background"
                                             Width="14"
                                             Height="14"
                                             CornerRadius="1"
                                             BorderBrush="{TemplateBinding BorderBrush}"
                                             BorderThickness="{TemplateBinding BorderThickness}"
                                             Background="#FFFFFFFF"
                                             Margin="1" />
                            <controls:Border x:Name="BackgroundOverlay"
                                             Background="#FFC4DBEE"
                                             Opacity="0"
                                             Width="14"
                                             Height="14"
                                             CornerRadius="1"
                                             BorderThickness="1"
                                             Margin="1"
                                             BorderBrush="#00000000" />
                            <controls:Border x:Name="BoxMiddleBackground"
                                             Width="10"
                                             Height="10"
                                             CornerRadius="1"
                                             Background="{TemplateBinding Background}"
                                             BorderBrush="#00000000"
                                             BorderThickness="1" />
                            <controls:Border x:Name="BoxMiddle"
                                             Width="10"
                                             Height="10"
                                             CornerRadius="1"
                                             BorderThickness="1"
                                             BorderBrush="#FFFFFFFF">
                                <controls:Border.Background>
                                    <media:LinearGradientBrush StartPoint="0.62,0.15"
                                                               EndPoint="0.64,0.88">
                                        <media:GradientStop Color="#FFFFFFFF"
                                                            Offset="0.013" />
                                        <media:GradientStop Color="#F9FFFFFF"
                                                            Offset="0.375" />
                                        <media:GradientStop Color="#EAFFFFFF"
