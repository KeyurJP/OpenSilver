                Value="#FF718597" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:ComboBox">
                    <controls:ControlTemplate.Resources>
                        <Style x:Key="comboToggleStyle"
                               TargetType="primitives:ToggleButton">
                            <Setter Property="Foreground"
                                    Value="#FF333333" />
                            <Setter Property="Background"
                                    Value="#FF1F3B53" />
                            <Setter Property="BorderBrush"
                                    Value="#FF718597" />
                            <Setter Property="BorderThickness"
                                    Value="1" />
                            <Setter Property="Padding"
                                    Value="3" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <controls:ControlTemplate TargetType="primitives:ToggleButton">
                                        <controls:Grid>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="MouseOver">
                                                        <animation:Storyboard>
                                                            <animation:DoubleAnimation Duration="0"
                                                                                       animation:Storyboard.TargetName="BackgroundOverlay"
                                                                                       animation:Storyboard.TargetProperty="Opacity"
                                                                                       To="1" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                                      To="#7FFFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                                      To="#CCFFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                                      To="#F2FFFFFF" />
                                                        </animation:Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <animation:Storyboard>
                                                            <animation:DoubleAnimation Duration="0"
                                                                                       animation:Storyboard.TargetName="BackgroundOverlay2"
                                                                                       animation:Storyboard.TargetProperty="Opacity"
                                                                                       To="1" />
                                                            <animation:DoubleAnimation Duration="0"
                                                                                       animation:Storyboard.TargetName="Highlight"
                                                                                       animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                                       To="1" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                                      To="#E5FFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                                      To="#BCFFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                                      To="#6BFFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                                      To="#F2FFFFFF" />
                                                        </animation:Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Disabled" />
                                                </VisualStateGroup>
                                                <VisualStateGroup x:Name="CheckStates">
                                                    <VisualState x:Name="Checked">
                                                        <animation:Storyboard>
                                                            <animation:DoubleAnimation Duration="0"
                                                                                       animation:Storyboard.TargetName="BackgroundOverlay3"
                                                                                       animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                                       To="1" />
                                                            <animation:DoubleAnimation Duration="0"
                                                                                       animation:Storyboard.TargetName="Highlight"
                                                                                       animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                                       To="1" />
                                                            <animation:DoubleAnimation Duration="0"
                                                                                       animation:Storyboard.TargetName="BackgroundGradient2"
                                                                                       animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                                       To="1" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient2"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                                      To="#E5FFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient2"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                                      To="#BCFFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient2"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                                      To="#6BFFFFFF" />
                                                            <animation:ColorAnimation Duration="0"
                                                                                      animation:Storyboard.TargetName="BackgroundGradient2"
                                                                                      animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                                      To="#F2FFFFFF" />
                                                        </animation:Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Unchecked" />
                                                </VisualStateGroup>
                                                <VisualStateGroup x:Name="FocusStates">
                                                    <VisualState x:Name="Focused">
                                                        <animation:Storyboard>
                                                            <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="FocusVisualElement"
                                                                                                     animation:Storyboard.TargetProperty="Visibility"
                                                                                                     Duration="0">
                                                                <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                                    <animation:DiscreteObjectKeyFrame.Value>
                                                                        <Visibility>Visible</Visibility>
                                                                    </animation:DiscreteObjectKeyFrame.Value>
                                                                </animation:DiscreteObjectKeyFrame>
                                                            </animation:ObjectAnimationUsingKeyFrames>
                                                        </animation:Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Unfocused" />
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <controls:Border x:Name="Background"
                                                             CornerRadius="3"
                                                             Background="{TemplateBinding Background}"
                                                             BorderThickness="{TemplateBinding BorderThickness}"
                                                             BorderBrush="{TemplateBinding BorderBrush}" />
                                            <controls:Border x:Name="BackgroundOverlay"
                                                             Opacity="0"
                                                             CornerRadius="3"
                                                             Background="#FF448DCA"
                                                             BorderThickness="{TemplateBinding BorderThickness}"
                                                             BorderBrush="#00000000" />
                                            <controls:Border x:Name="BackgroundOverlay2"
                                                             Opacity="0"
                                                             CornerRadius="3"
                                                             Background="#FF448DCA"
                                                             BorderThickness="{TemplateBinding BorderThickness}"
                                                             BorderBrush="#00000000" />
                                            <controls:Border x:Name="BackgroundGradient"
                                                             CornerRadius="2"
                                                             BorderThickness="1"
                                                             Margin="{TemplateBinding BorderThickness}"
                                                             BorderBrush="#FFFFFFFF">
                                                <controls:Border.Background>
                                                    <media:LinearGradientBrush StartPoint=".7,0"
                                                                               EndPoint=".7,1">
                                                        <media:GradientStop Color="#FFFFFFFF"
                                                                            Offset="0" />
                                                        <media:GradientStop Color="#F9FFFFFF"
                                                                            Offset="0.375" />
                                                        <media:GradientStop Color="#E5FFFFFF"
                                                                            Offset="0.625" />
                                                        <media:GradientStop Color="#C6FFFFFF"
                                                                            Offset="1" />
                                                    </media:LinearGradientBrush>
                                                </controls:Border.Background>
                                            </controls:Border>
                                            <controls:Border Opacity="0"
                                                             x:Name="BackgroundOverlay3"
                                                             CornerRadius="3"
                                                             Background="#FF448DCA"
                                                             BorderThickness="{TemplateBinding BorderThickness}"
                                                             BorderBrush="#00000000" />
                                            <controls:Border Opacity="0"
                                                             x:Name="BackgroundGradient2"
                                                             CornerRadius="2"
                                                             BorderThickness="1"
                                                             Margin="{TemplateBinding BorderThickness}"
                                                             BorderBrush="#FFFFFFFF">
                                                <controls:Border.Background>
                                                    <media:LinearGradientBrush StartPoint=".7,0"
                                                                               EndPoint=".7,1">
                                                        <media:GradientStop Color="#FFFFFFFF"
                                                                            Offset="0" />
                                                        <media:GradientStop Color="#F9FFFFFF"
                                                                            Offset="0.375" />
                                                        <media:GradientStop Color="#E5FFFFFF"
                                                                            Offset="0.625" />
                                                        <media:GradientStop Color="#C6FFFFFF"
                                                                            Offset="1" />
                                                    </media:LinearGradientBrush>
                                                </controls:Border.Background>
                                            </controls:Border>
                                            <controls:Border x:Name="Highlight"
                                                             CornerRadius="2"
                                                             Opacity="0"
                                                             IsHitTestVisible="false"
                                                             BorderBrush="#FF6DBDD1"
                                                             BorderThickness="1"
                                                             Margin="{TemplateBinding BorderThickness}" />
                                            <controls:ContentPresenter x:Name="contentPresenter"
                                                                       Content="{TemplateBinding Content}"
                                                                       ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                       Margin="{TemplateBinding Padding}" />
                                            <controls:Border x:Name="FocusVisualElement"
                                                             CornerRadius="3.5"
                                                             Margin="1"
                                                             BorderBrush="#FF6DBDD1"
                                                             BorderThickness="1"
                                                             Visibility="Collapsed"
                                                             IsHitTestVisible="false" />
                                        </controls:Grid>
                                    </controls:ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </controls:ControlTemplate.Resources>
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation Duration="00:00:00"
                                                                   animation:Storyboard.TargetName="DisabledVisualElement"
                                                                   animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                   To=".55" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation Duration="00:00:00"
                                                                   animation:Storyboard.TargetName="FocusVisualElement"
                                                                   animation:Storyboard.TargetProperty="(UIElement.Opacity)"
                                                                   To="1" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="FocusedDropDown">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                 animation:Storyboard.TargetName="PopupBorder"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                                <VisualState x:Name="Valid" />
                                <VisualState x:Name="InvalidUnfocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationErrorElement"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="InvalidFocused">
                                    <animation:Storyboard>
                                        <animation:ObjectAnimationUsingKeyFrames animation:Storyboard.TargetName="ValidationErrorElement"
                                                                                 animation:Storyboard.TargetProperty="Visibility">
                                            <animation:DiscreteObjectKeyFrame KeyTime="0">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:BooleanAnimationUsingKeyFrames animation:Storyboard.TargetName="validationTooltip"
                                                                                  animation:Storyboard.TargetProperty="IsOpen">
                                            <animation:DiscreteBooleanKeyFrame KeyTime="0"
                                                                               Value="True" />
                                        </animation:BooleanAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:Border x:Name="ContentPresenterBorder">
                            <controls:Grid>
                                <primitives:ToggleButton x:Name="DropDownToggle"
                                                         Style="{markup:StaticResource comboToggleStyle}"
