                                        </shapes:Path.Fill>
                                    </shapes:Path>
                                </primitives:ToggleButton>
                                <controls:ContentPresenter x:Name="ContentPresenter"
                                                           Content="{markup:Null}"
                                                           ContentTemplate="{markup:Null}"
                                                           Margin="{TemplateBinding Padding}"
                                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    <controls:TextBlock Text=" " />
                                </controls:ContentPresenter>
                            </controls:Grid>
                        </controls:Border>
                        <controls:Border x:Name="DisabledVisualElement"
                                         CornerRadius="3"
                                         Background="White"
                                         Opacity="0"
                                         IsHitTestVisible="false" />
                        <controls:Border x:Name="FocusVisualElement"
                                         CornerRadius="2"
                                         Margin="1"
                                         BorderBrush="#FF6DBDD1"
                                         BorderThickness="1"
                                         Opacity="0"
                                         IsHitTestVisible="false" />
                        <controls:Border x:Name="ValidationErrorElement"
                                         BorderThickness="1"
                                         CornerRadius="1"
                                         BorderBrush="#FFDB000C"
                                         Visibility="Collapsed">
                            <controls:ToolTipService.ToolTip>
                                <controls:ToolTip x:Name="validationTooltip"
                                                  Template="{markup:StaticResource ValidationToolTipTemplate}"
                                                  Placement="Right"
                                                  PlacementTarget="{data:Binding RelativeSource={data:RelativeSource TemplatedParent}}"
                                                  DataContext="{data:Binding RelativeSource={data:RelativeSource TemplatedParent}}">
                                    <controls:ToolTip.Triggers>
                                        <EventTrigger RoutedEvent="Canvas.Loaded">
                                            <EventTrigger.Actions>
                                                <animation:BeginStoryboard>
                                                    <animation:Storyboard>
                                                        <animation:BooleanAnimationUsingKeyFrames animation:Storyboard.TargetName="validationTooltip"
                                                                                                  animation:Storyboard.TargetProperty="IsHitTestVisible">
                                                            <animation:DiscreteBooleanKeyFrame KeyTime="0"
                                                                                               Value="True" />
                                                        </animation:BooleanAnimationUsingKeyFrames>
                                                    </animation:Storyboard>
                                                </animation:BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </controls:ToolTip.Triggers>
                                </controls:ToolTip>
                            </controls:ToolTipService.ToolTip>
                            <controls:Grid Width="12"
                                           Height="12"
                                           HorizontalAlignment="Right"
                                           Margin="1,-4,-4,0"
                                           VerticalAlignment="Top"
                                           Background="Transparent">
                                <shapes:Path Margin="1,3,0,0"
                                             Data="M 1,0 L6,0 A 2,2 90 0 1 8,2 L8,7 z"
                                             Fill="#FFDC000C" />
                                <shapes:Path Margin="1,3,0,0"
                                             Data="M 0,0 L2,0 L 8,6 L8,8"
                                             Fill="#ffffff" />
                            </controls:Grid>
                        </controls:Border>
                        <primitives:Popup x:Name="Popup">
                            <controls:Border x:Name="PopupBorder"
                                             HorizontalAlignment="Stretch"
                                             Height="Auto"
                                             BorderThickness="{TemplateBinding BorderThickness}"
                                             BorderBrush="{TemplateBinding BorderBrush}"
                                             CornerRadius="3">
                                <controls:Border.Background>
                                    <media:LinearGradientBrush EndPoint="0.5,1"
                                                               StartPoint="0.5,0">
                                        <media:GradientStop Color="#FFFFFFFF"
                                                            Offset="0" />
                                        <media:GradientStop Color="#FFFEFEFE"
                                                            Offset="1" />
                                    </media:LinearGradientBrush>
                                </controls:Border.Background>
                                <controls:ScrollViewer x:Name="ScrollViewer"
                                                       BorderThickness="0"
                                                       Padding="1">
                                    <controls:ItemsPresenter />
                                </controls:ScrollViewer>
                            </controls:Border>
                        </primitives:Popup>
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ProgressBar  -->
    <Style TargetType="controls:ProgressBar">
        <Setter Property="Foreground"
                Value="#FF027DB8" />
        <Setter Property="Background"
                Value="#FFD2D5D8" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Maximum"
                Value="100" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="BorderBrush"
                Value="#FF647480" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:ProgressBar">
                    <controls:Grid x:Name="Root">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Determinate" />
                                <VisualState x:Name="Indeterminate">
                                    <animation:Storyboard RepeatBehavior="Forever">
                                        <animation:DoubleAnimation animation:Storyboard.TargetName="IndeterminateGradientFill"
                                                                   animation:Storyboard.TargetProperty="(Rectangle.Fill).(LinearGradientBrush.Transform).(TransformGroup.Children)[0].X"
                                                                   Duration="00:00:.5"
                                                                   From="0"
                                                                   To="20" />
                                        <animation:ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                 animation:Storyboard.TargetName="IndeterminateRoot"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                        <animation:ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                 animation:Storyboard.TargetName="DeterminateRoot"
                                                                                 animation:Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <animation:DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                <animation:DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </animation:DiscreteObjectKeyFrame.Value>
                                            </animation:DiscreteObjectKeyFrame>
                                        </animation:ObjectAnimationUsingKeyFrames>
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <!--Default Root Visuals for either type of ProgressBar-->
                        <controls:Border Name="ProgressBarTrack"
                                         CornerRadius="3"
                                         Background="{TemplateBinding Background}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         BorderBrush="{TemplateBinding BorderBrush}" />
                        <controls:Grid x:Name="ProgressBarRootGrid">
                            <!-- Beginning of Gradient over all visuals -->
                            <controls:Border controls:Canvas.ZIndex="1"
                                             x:Name="ProgressBarRootGradient"
                                             BorderThickness="1"
                                             Margin="{TemplateBinding BorderThickness}"
                                             BorderBrush="#FFFFFFFF"
                                             CornerRadius="1.5">
                                <controls:Border.Background>
                                    <media:LinearGradientBrush StartPoint=".7,0"
                                                               EndPoint=".7,1">
                                        <media:GradientStop Color="#B2FFFFFF"
                                                            Offset="0" />
                                        <media:GradientStop Color="#C6FFFFFF"
                                                            Offset="0.15" />
                                        <media:GradientStop Color="#D1FFFFFF"
                                                            Offset="0.275" />
                                        <media:GradientStop Color="#C6FFFFFF"
                                                            Offset="0.4" />
                                        <media:GradientStop Color="#BFFFFFFF"
                                                            Offset="0.65" />
                                        <media:GradientStop Color="#A5FFFFFF"
                                                            Offset="0.75" />
                                        <media:GradientStop Color="#91FFFFFF"
                                                            Offset="0.85" />
                                        <media:GradientStop Color="#72FFFFFF"
                                                            Offset="1" />
                                    </media:LinearGradientBrush>
                                </controls:Border.Background>
                            </controls:Border>
                            <!-- Beginning of Indeterminate Progress Bar Visuals-->
                            <controls:Grid x:Name="IndeterminateRoot"
                                           Visibility="Collapsed">
                                <controls:Border x:Name="IndeterminateSolidFill"
                                                 BorderBrush="#FF448DCA"
                                                 CornerRadius="2"
                                                 BorderThickness="0"
                                                 Margin="{TemplateBinding BorderThickness}"
                                                 Background="{TemplateBinding Foreground}"
                                                 Opacity="1"
                                                 RenderTransformOrigin="0.5,0.5" />
                                <shapes:Rectangle x:Name="IndeterminateGradientFill"
                                                  RadiusX="2"
                                                  RadiusY="2"
                                                  StrokeThickness="1"
                                                  Margin="{TemplateBinding BorderThickness}"
                                                  Opacity="0.7">
                                    <shapes:Rectangle.Fill>
                                        <media:LinearGradientBrush SpreadMethod="Repeat"
                                                                   MappingMode="Absolute"
                                                                   EndPoint="0,1"
                                                                   StartPoint="20,1">
                                            <media:LinearGradientBrush.Transform>
                                                <media:TransformGroup>
                                                    <media:TranslateTransform X="0" />
                                                    <media:SkewTransform AngleX="-30" />
                                                </media:TransformGroup>
                                            </media:LinearGradientBrush.Transform>
                                            <media:GradientStop Color="#FFFFFFFF"
                                                                Offset="0" />
                                            <media:GradientStop Color="#00FFFFFF"
                                                                Offset=".25" />
                                            <media:GradientStop Color="#FFFFFFFF"
                                                                Offset="0.85" />
                                        </media:LinearGradientBrush>
                                    </shapes:Rectangle.Fill>
                                </shapes:Rectangle>
                            </controls:Grid>
                            <!-- Beginning of Determinate Progress Bar Visuals-->
                            <controls:Grid x:Name="DeterminateRoot"
                                           Margin="1">
                                <!--Background -->
                                <controls:Border HorizontalAlignment="Left"
                                                 x:Name="ProgressBarIndicator"
                                                 Margin="{TemplateBinding BorderThickness}"
                                                 BorderThickness="0.5"
                                                 CornerRadius="1.5"
                                                 Background="{TemplateBinding Foreground}" />
                            </controls:Grid>
