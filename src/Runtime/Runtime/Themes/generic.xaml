<ResourceDictionary xmlns="clr-namespace:System.Windows"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:System.Windows.Controls"
                    xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives"
                    xmlns:data="clr-namespace:System.Windows.Data"
                    xmlns:markup="clr-namespace:System.Windows.Markup"
                    xmlns:media="clr-namespace:System.Windows.Media"
                    xmlns:animation="clr-namespace:System.Windows.Media.Animation"
                    xmlns:shapes="clr-namespace:System.Windows.Shapes"
                    xmlns:effects="clr-namespace:System.Windows.Media.Effects"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <controls:ControlTemplate x:Key="ValidationToolTipTemplate">
        <controls:Grid x:Name="Root"
                       Margin="5,0"
                       RenderTransformOrigin="0,0"
                       Opacity="0">
            <controls:Grid.RenderTransform>
                <media:TranslateTransform x:Name="xform"
                                          X="-25" />
            </controls:Grid.RenderTransform>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="OpenStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="0" />
                        <VisualTransition To="Open"
                                          GeneratedDuration="0:0:0.2">
                            <animation:Storyboard>
                                <animation:DoubleAnimation animation:Storyboard.TargetName="xform"
                                                           animation:Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.2">
                                    <animation:DoubleAnimation.EasingFunction>
                                        <animation:BackEase Amplitude=".3"
                                                            EasingMode="EaseOut" />
                                    </animation:DoubleAnimation.EasingFunction>
                                </animation:DoubleAnimation>
                                <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                           animation:Storyboard.TargetProperty="Opacity"
                                                           To="1"
                                                           Duration="0:0:0.2" />
                            </animation:Storyboard>
                        </VisualTransition>
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Closed">
                        <animation:Storyboard>
                            <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                       animation:Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0" />
                        </animation:Storyboard>
                    </VisualState>
                    <VisualState x:Name="Open">
                        <animation:Storyboard>
                            <animation:DoubleAnimation animation:Storyboard.TargetName="xform"
                                                       animation:Storyboard.TargetProperty="X"
                                                       To="0"
                                                       Duration="0" />
                            <animation:DoubleAnimation animation:Storyboard.TargetName="Root"
                                                       animation:Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0" />
                        </animation:Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <controls:Border Margin="4,4,-4,-4"
                             Background="#052A2E31"
                             CornerRadius="5" />
            <controls:Border Margin="3,3,-3,-3"
                             Background="#152A2E31"
                             CornerRadius="4" />
            <controls:Border Margin="2,2,-2,-2"
                             Background="#252A2E31"
                             CornerRadius="3" />
            <controls:Border Margin="1,1,-1,-1"
                             Background="#352A2E31"
                             CornerRadius="2" />

            <controls:Border Background="#FFDC000C"
                             CornerRadius="2" />
            <controls:Border CornerRadius="2">
                <controls:TextBlock UseLayoutRounding="false"
                                    Foreground="White"
                                    Margin="8,4,8,4"
                                    MaxWidth="250"
                                    TextWrapping="Wrap"
                                    Text="{data:Binding (controls:Validation.Errors)[0].ErrorContent}" />
            </controls:Border>
        </controls:Grid>
    </controls:ControlTemplate>

    <!-- TextBlock -->
    <Style TargetType="controls:TextBlock" />

    <!-- RichTextBlock -->
    <Style TargetType="controls:RichTextBlock" />

    <!--  ContentControl  -->
    <Style TargetType="controls:ContentControl">
        <Setter Property="Foreground"
                Value="#FF000000" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="VerticalContentAlignment"
                Value="Top" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:ContentControl">
                    <controls:ContentPresenter Content="{TemplateBinding Content}"
                                               ContentTemplate="{TemplateBinding ContentTemplate}"
                                               Cursor="{TemplateBinding Cursor}"
                                               Margin="{TemplateBinding Padding}"
                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                               VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ItemsControl  -->
    <Style TargetType="controls:ItemsControl">
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:ItemsControl">
                    <controls:ItemsPresenter />
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Button  -->
    <Style TargetType="controls:Button">
        <Setter Property="Background"
                Value="#FF1F3B53" />
        <Setter Property="Foreground"
                Value="#FF000000" />
        <Setter Property="Padding"
                Value="3" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="#FF718597" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="controls:Button">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation Duration="0"
                                                                   animation:Storyboard.TargetName="BackgroundAnimation"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                  To="#F2FFFFFF" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                  To="#CCFFFFFF" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                  To="#7FFFFFFF" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <animation:Storyboard>
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="Background"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                  To="#FF6DBDD1" />
                                        <animation:DoubleAnimation Duration="0"
                                                                   animation:Storyboard.TargetName="BackgroundAnimation"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                  To="#D8FFFFFF" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                                  To="#C6FFFFFF" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                                  To="#8CFFFFFF" />
                                        <animation:ColorAnimation Duration="0"
                                                                  animation:Storyboard.TargetName="BackgroundGradient"
                                                                  animation:Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                                  To="#3FFFFFFF" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation Duration="0"
                                                                   animation:Storyboard.TargetName="DisabledVisualElement"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To=".55" />
                                    </animation:Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation Duration="0"
                                                                   animation:Storyboard.TargetName="FocusVisualElement"
                                                                   animation:Storyboard.TargetProperty="Opacity"
                                                                   To="1" />
                                    </animation:Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <controls:Border x:Name="Background"
                                         CornerRadius="3"
                                         Background="White"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         BorderBrush="{TemplateBinding BorderBrush}">
                            <controls:Grid Background="{TemplateBinding Background}"
                                           Margin="1">
                                <controls:Border Opacity="0"
                                                 x:Name="BackgroundAnimation"
                                                 Background="#FF448DCA" />
                                <controls:Border x:Name="BackgroundGradient">
                                    <controls:Border.Background>
                                        <media:LinearGradientBrush StartPoint=".7,0"
                                                                   EndPoint=".7,1">
                                            <media:GradientStop Color="#FFFFFFFF"
                                                                Offset="0" />
                                            <media:GradientStop Color="#F9FFFFFF"
                                                                Offset="0.375" />
                                            <media:GradientStop Color="#E5FFFFFF"
                                                                Offset="0.625" />
                                            <media:GradientStop Color="#C6FFFFFF"
                                                                Offset="1" />
                                        </media:LinearGradientBrush>
                                    </controls:Border.Background>
                                </controls:Border>
                            </controls:Grid>
                        </controls:Border>
                        <controls:ContentPresenter x:Name="contentPresenter"
                                                   Content="{TemplateBinding Content}"
                                                   ContentTemplate="{TemplateBinding ContentTemplate}"
                                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                   Margin="{TemplateBinding Padding}" />
                        <controls:Border x:Name="DisabledVisualElement"
                                         CornerRadius="3"
                                         Background="#FFFFFFFF"
                                         Opacity="0"
                                         IsHitTestVisible="false" />
                        <controls:Border x:Name="FocusVisualElement"
                                         CornerRadius="2"
                                         Margin="1"
                                         BorderBrush="#FF6DBDD1"
                                         BorderThickness="1"
                                         Opacity="0"
                                         IsHitTestVisible="false" />
                    </controls:Grid>
                </controls:ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ToggleButton  -->
    <Style TargetType="primitives:ToggleButton">
        <Setter Property="Background"
                Value="#FF1F3B53" />
        <Setter Property="Foreground"
                Value="#FF000000" />
        <Setter Property="Padding"
                Value="3" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="#FF718597" />
        <Setter Property="Template">
            <Setter.Value>
                <controls:ControlTemplate TargetType="primitives:ToggleButton">
                    <controls:Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <animation:Storyboard>
                                        <animation:DoubleAnimation Duration="0"
                                                                   animation:Storyboard.TargetName="BackgroundAnimation"
