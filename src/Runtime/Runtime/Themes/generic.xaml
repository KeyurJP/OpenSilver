    <!--  ComboBox  -->
    <Style TargetType="controls:ComboBox">
        <Setter Property="Padding"
                Value="6,2,25,2" />
        <Setter Property="Background"
                Value="#FF1F3B53" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="TabNavigation"
                Value="Once" />
        <Setter Property="controls:ScrollViewer.HorizontalScrollBarVisibility"
                Value="Auto" />
        <Setter Property="controls:ScrollViewer.VerticalScrollBarVisibility"
                Value="Auto" />
